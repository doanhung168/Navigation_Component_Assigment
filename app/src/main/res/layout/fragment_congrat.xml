<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CongratFragment">

    <TextView
        android:id="@+id/tvCongratulations"
        style="@style/my_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/congratulations"
        app:layout_constraintBottom_toTopOf="@+id/btnComebackQuizz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvScore"
        style="@style/my_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_dimens"
        app:layout_constraintEnd_toEndOf="@+id/tvCongratulations"
        app:layout_constraintStart_toStartOf="@+id/tvCongratulations"
        app:layout_constraintTop_toBottomOf="@+id/tvCongratulations"
        tools:text="Score: 100" />

    <Button
        android:id="@+id/btnComebackQuizz"
        style="@style/my_button_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/extreme_dimens"
        android:layout_marginEnd="@dimen/extreme_dimens"
        android:layout_marginBottom="@dimen/extreme_dimens"
        android:text="@string/comeback_quizz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>